{
  "extends": [
    "../.eslintrc",
    "plugin:jsx-a11y/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "18"
    },
    "import/resolver": {
      "node": {
        "moduleDirectory": ["./", "./node_modules/"]
      }
    }
  },
  "rules": {
    "react/prop-types": "off"
  },
  "ignorePatterns": [
    "src/i18n/locales" // generated (by lingui)
  ]
}
