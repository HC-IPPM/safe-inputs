{
  "name": "safe-inputs-backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^20"
  },
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "ts-node --transpileOnly index.js",
    "dev": "nodemon --exec 'ts-node --typeCheck index.js'",
    "dev:debug": "nodemon --exec 'ts-node --typeCheck --inspect-brk index.js'",
    "dev:docker": "npm run dev",
    "dev:docker-debug": "nodemon --exec 'ts-node --typeCheck --inspect-brk='0.0.0.0:9229' index.js'",
    "test": "docker compose -f ./docker-compose.dev-test.yaml up --exit-code-from api-test",
    "pretest": "npm run test:down",
    "jest:docker": "node --experimental-vm-modules node_modules/.bin/jest --coverage --coverageReporters text",
    "test:debug": "DOCKER_API_COMMAND=docker-debug docker compose -f ./docker-compose.dev-test.yaml up --exit-code-from api-test",
    "pretest:debug": "npm run test:down",
    "jest:docker-debug": "node --experimental-vm-modules --inspect-brk='0.0.0.0:9229' node_modules/.bin/jest --runInBand --no-cache",
    "test:down": "docker compose -f ./docker-compose.dev-test.yaml down"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "verbose": true
  },
  "dependencies": {
    "@escape.tech/graphql-armor-max-aliases": "^1.6.1",
    "@escape.tech/graphql-armor-max-depth": "^1.8.1",
    "@graphql-tools/schema": "^10.0.3",
    "@graphql-yoga/node": "^3.3.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.0.3",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "mongodb": "^6.6.2",
    "mongoose": "^8.4.0",
    "passport": "^0.7.0",
    "passport-magic-link": "^2.1.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/passport": "^1.0.16",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.3.1",
    "node-abort-controller": "^3.0.1",
    "nodemon": "^3.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.5"
  }
}
