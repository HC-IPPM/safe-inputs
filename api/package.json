{
  "name": "safe-inputs-backend",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^20"
  },
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "start": "tsx ./src/index.ts",
    "dev": "nodemon --exec tsx ./src/index.ts",
    "dev:debug": "nodemon --exec tsx --inspect-brk ./src/index.ts",
    "dev:docker": "npm run dev",
    "dev:docker-debug": "nodemon --exec tsx --inspect-brk='0.0.0.0:9229' ./src/index.ts",
    "pretest": "npm run test:down",
    "test": "docker compose -f ./docker-compose.dev-test.yaml up --exit-code-from api-test",
    "jest:docker": "jest --coverage --coverageReporters text",
    "pretest:watch": "npm run test:down",
    "test:watch": "DOCKER_API_COMMAND=docker-watch docker compose -f ./docker-compose.dev-test.yaml up",
    "jest:docker-watch": "jest --coverage --coverageReporters text --watchAll",
    "pretest:debug": "npm run test:down",
    "test:debug": "DOCKER_API_COMMAND=docker-debug docker compose -f ./docker-compose.dev-test.yaml up",
    "jest:docker-debug": "node --inspect-brk='0.0.0.0:9229' node_modules/.bin/jest --watchAll --runInBand --no-cache",
    "test:down": "docker compose -f ./docker-compose.dev-test.yaml down"
  },
  "dependencies": {
    "@escape.tech/graphql-armor-max-aliases": "^1.6.1",
    "@escape.tech/graphql-armor-max-depth": "^1.8.1",
    "@graphql-tools/schema": "^10.0.3",
    "@graphql-yoga/node": "^3.3.0",
    "connect-mongo": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.0.3",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "graphql": "^16.6.0",
    "graphql-type-json": "^0.3.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.6.2",
    "mongoose": "^8.4.0",
    "passport": "^0.7.0",
    "passport-magic-link": "^2.1.1",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@jest/globals": "29.7.0",
    "@types/cookie-parser": "1.4.7",
    "@types/express": "4.17.21",
    "@types/express-session": "1.18.0",
    "@types/jest": "29.5.12",
    "@types/lodash": "4.17.5",
    "@types/node": "20.14.6",
    "@types/passport": "1.0.16",
    "@types/supertest": "6.0.2",
    "@types/validator": "13.12.0",
    "eslint": "8.57.0",
    "eslint-plugin-n": "14.0.0",
    "jest": "29.4.3",
    "nodemon": "3.1.4",
    "supertest": "6.3.3",
    "ts-jest": "29.1.5"
  }
}
